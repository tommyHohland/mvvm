<Window x:Class="MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM"
        mc:Ignorable="d"
        Title="Projects management system"  Width="1350" Height="800">
    <Grid>
        <Menu VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <MenuItem Header="Pages">
                <MenuItem Header="Employee Page" Command="{Binding OpenEmployeePageCommand}" />
                <MenuItem Header="Project Page" Command="{Binding OpenProjectPageCommand}" />
            </MenuItem>
        </Menu>
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" Margin="0,30,0,0" Width="1280" Height="720"/>
    </Grid>
</Window>
